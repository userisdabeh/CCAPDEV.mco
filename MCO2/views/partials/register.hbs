<div class="main-register">
    <form id="registerForm" method="POST" action="/register" novalidate>
        <h1>Create Account</h1>
        <input type="hidden" name="type" id="userType" value="student" />

        <div class="two-forms">
            <div class="input-box form-control">
                <input type="text" name="firstName" id="firstName" placeholder="First Name" required>
                <small>Error message</small>
            </div>

            <div class="input-box form-control">
                <input type="text" name="lastName" id="lastName" placeholder="Last Name" required>
                <small>Error message</small>
            </div>
        </div>

        <div class="input-box form-control">
            <input type="email" name="email" id="email" placeholder="DLSU Email" required>
            <small>Error message</small>
        </div>

        <div class="input-form">
    <!-- Password -->
    <div class="input-box" style="position: relative;">
        <input type="password" name="password" id="password" placeholder="Password" required aria-label="Password">
        <i class="bi bi-eye-slash-fill toggle-password"
           role="button"
           tabindex="0"
           aria-label="Show password"
           aria-pressed="false"
           data-target="password"></i>
    </div>
    <div class="err-msg" id="password-error-frontend"></div>
    {{#if errors}}
        <div class="err-msg" id="password-error-backend">{{error.password}}</div>
    {{/if}}

    <!-- Confirm Password -->
    <div class="input-box" style="position: relative; margin-top:1rem;">
        <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required aria-label="Confirm Password">
        <i class="bi bi-eye-slash-fill toggle-password"
           role="button"
           tabindex="0"
           aria-label="Show confirm password"
           aria-pressed="false"
           data-target="confirmPassword"></i>
    </div>
    <div class="err-msg" id="confirm-password-error-frontend"></div>
    {{#if errors}}
        <div class="err-msg" id="confirm-password-error-backend">{{error.confirmPassword}}</div>
    {{/if}}
</div>

        <div class="terms form-control">
            <label><input type="checkbox" name="terms" id="terms">Agree to terms & Conditions</label>
            <small>Error message</small>
        </div>

        <button type="submit" class="btn">Register</button>

        <div class="login-register">
            <p>Already have an account? 
                <a href="/" class="login-link">Log In</a>
            </p>
            <div id="formMessage" class="msg"></div>
        </div>
    </form>
</div>
