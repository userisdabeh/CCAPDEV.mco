<div class="main">
        <form id="loginForm" action="/login" method="POST">
            <h1>GokoLab</h1>
            <div class="input-form">
                <div class="input-box">
                    <input type="email" name="email" id="email" placeholder="DLSU Email" required>
                    <i class="bi bi-envelope-fill"></i>
                </div>
                <div class="err-msg" id="email-error-frontend"></div>
                {{#if errors}}
                    <div class="err-msg" id="email-error-backend">{{error}}</div>
                {{/if}}
            </div>
            <div class="input-form">
                <div class="input-box">
                    <input type="password" name="password" id="password" placeholder="Password" required>
                    <i class="bi bi-eye-slash-fill" id="eyeIcon" onclick="eyePass()"></i>
                </div>
                <div class="err-msg" id="password-error-frontend"></div>
            </div>

            <div class="remember-forgot">
                <label><input type="checkbox">Remember me </label>
                <a href="/forgot">Forgot password?</a>
            </div>

            <button type="submit" class="btn">Login</button>

            <div class="register-link">
                <p>Don't have an account? 
                    <a href="/register">Register</a></p>
            </div>
        </form>
    </div>